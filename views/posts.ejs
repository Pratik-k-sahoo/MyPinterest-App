<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/header.ejs') %>
    <title>Document</title>
  </head>
  <body style="background: white">
    <%- include('./partials/nav.ejs') %>

    <div class="post-section pt-5">
      <div class="container" style="margin-top: 7rem">
        <div
          class="section-posts relative flex justify-content-start flex-wrap align-items-center"
          style="gap: 40px"
        >
          <% locals.user.posts.forEach(post => { %>
            <div class="card-holder" style="width: 145px">
              <div
                class="img-holder overflow-hidden rounded-3 object-fit-cover"
                style="width: 145px; height: 180px"
              >
                <img
                  src="<%= post.image %>"
                  class="w-100 h-100 mx-auto d-block object-fit-cover img-thumbnail p-0"
                  alt="<%= post.image %>"
                />
              </div>
              <div class="card-details text-center text-wrap mt-2">
                <h2 class="fs-5 fw-bolder lh-1"><%= post.title %></h2>
                <h4 class="fs-6 fw-normal lh-1">
                  <%= post.desc %>
                </h4>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>

    <%- include('./partials/footer.ejs') %>
  </body>
</html>
